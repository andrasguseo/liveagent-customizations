jQuery(document).ready(function() {
    var headerup = 0,
    pos = $(window).scrollTop();
    if ((pos > 0) && (headerup == 0)) {
        headerup = 1;
        $('body').addClass('scrolled')
    };
    $(window).scroll(function() {
        var pos = $(window).scrollTop();
        if (pos == 0) {
            headerup = 0;
            $('body').removeClass('scrolled');
            $('body').addClass('no-scrolled')
        };
        if ((pos > 0) && (headerup == 0)) {
            headerup = 1;
            $('body').addClass('scrolled');
            $('body').removeClass('no-scrolled')
        }
    })
});